<!-- Modal ETH -->
<div class="modal fade" id="EthModal" tabindex="-1" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"
                aria-label="Close"></button>
        </div>
        <form id="eth_form">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label for="">Amount</label>
                        <input type="number" class="form-control placeinput" id="eth_amount" name="eth_amount"  placeholder="5000" required>
                    </div>
                    <div class="col-md-12">
                        <label for="">Amount in ETH</label>
                        <input type="number" class="form-control placeinput" id="amount_in_eth" name="amount_in_eth"
                            placeholder="0.02345" readonly>
                    </div>
                    <div class="col-md-12">
                        <label for=""> send ethereum to the wallet address Bellow</label>
                        <input type="text" class="form-control placeinput" id="eth_wallet_address"
                            value="x34rtycfy78hjmlqwxflgkhp0yu" readonly>
                    </div>
                    <div class="col-md-6">
                        <span id="eth_copyMsg" class="text-success"></span>
                        <button type="button" class="btn btn-outline-success change_hover_success"
                            id="eth_copy_btn">Copy Wallet Address</button>
                    </div>
                    <input type="hidden" id="deposit_type" name="deposit_type" value="Crypto">
                    <input type="hidden" id="deposit_eth_coin" name="deposit_eth_coin" value="ETH">
                    <input type="hidden" id="userid" name="userid" value="<%= getuser._id %>">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary">Pay From Deposited Balance</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
<script>
    $('#eth_form').on('submit',function(e){
        e.preventDefault();
        let amount = $('#eth_amount').val();
        let eth_amount = $('#amount_in_eth').val();
        let deposit_type = $('#deposit_type').val();
        let deposit_crypto_coin = $('#deposit_eth_coin').val();
        userid =$('#userid').val();
        //alert(amount+""+btc_amount+""+deposit_type+""+deposit_crypto_coin)
        $.post('https://btfd-io.up.railway.app/api/deposit_crypto',
            {
            Amount:amount,
            crypto_Amount:eth_amount,
            Deposit_type:deposit_type,
            Deposit_Crypto_Coin:deposit_crypto_coin,
            Userid:userid
        },
        function(response){
               if(response.status==200){
                
                  $('#successModal').modal('show');
                  $('#EthModal').modal('hide');
               }
        })
    })
</script>
</div><!-- End of eth Moldal-->

