<!-- Modal DOGE -->
<div class="modal fade" id="DogeModal" tabindex="-1" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"
                aria-label="Close"></button>
        </div>
        <form id="doge_form">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label for="">Amount</label>
                        <input type="number" class="form-control placeinput" id="doge_amount" name="doge_amount"
                            placeholder="5000" required>
                    </div>
                    <div class="col-md-12">
                        <label for="">Amount in Doge</label>
                        <input type="number" class="form-control placeinput" id="amount_in_doge" name="amount_in_doge"
                            placeholder="0.02345" readonly>
                    </div>
                    <div class="col-md-12">
                        <label for=""> send BTC to the wallet address Bellow</label>
                        <input type="text" class="form-control placeinput" id="doge_wallet_address"
                            value="DG6F4HWeEsaiYWUr9uTwpUmw8FDFK9cvZY" readonly>
                    </div>
                    <div class="col-md-6">
                        <span id="doge_copyMsg" class="text-success"></span>
                        <button type="button" class="btn btn-outline-success change_hover_success"
                            id="doge_copy_btn">Copy Wallet Address</button>
                    </div>
                    <input type="hidden" id="deposit_type" name="deposit_type" value="Crypto">
                    <input type="hidden" id="deposit_doge_coin" name="deposit_doge_coin" value="DOGE">
                    <input type="hidden" id="userid" name="userid" value="<%= getuser._id %>">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary">Pay From Deposited Balance</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
<script>
    $('#doge_form').on('submit',function(e){
        e.preventDefault();
        let amount = $('#doge_amount').val();
        let doge_amount = $('#amount_in_doge').val();
        let deposit_type = $('#deposit_type').val();
        let deposit_crypto_coin = $('#deposit_doge_coin').val();
        userid =$('#userid').val();
        //alert(amount+""+btc_amount+""+deposit_type+""+deposit_crypto_coin)
        $.post('https://btfd-io.up.railway.app/api/deposit_crypto',
            {
            Amount:amount,
            crypto_Amount:doge_amount,
            Deposit_type:deposit_type,
            Deposit_Crypto_Coin:deposit_crypto_coin,
            Userid:userid
        },
        function(response){
               if(response.status==200){
                
                  $('#successModal').modal('show');
                  $('#DogeModal').modal('hide');
               }
        })
    })
</script>
</div><!-- End of Moldal-->